CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7620=y
CONFIG_TARGET_ramips_mt7620_DEVICE_xiaomi_mir3=y

# Root 密码（默认 root）
CONFIG_PASSWD_ROOT_PASSWORD="root"

# 无线驱动
CONFIG_PACKAGE_kmod-rt2800-mmio=y
CONFIG_PACKAGE_kmod-mt76x2=y

# USB 支持
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y
CONFIG_PACKAGE_kmod-usb-storage=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-ext4=y

# 基础 LuCI
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_luci-app-wireless=y

# 插件及依赖 (m 表示生成 .ipk)
CONFIG_PACKAGE_luci-app-passwall2=m
CONFIG_PACKAGE_naiveproxy=m
CONFIG_PACKAGE_hysteria2=m
CONFIG_PACKAGE_luci-app-kms=m

CONFIG_PACKAGE_iptables-mod-tproxy=y
CONFIG_PACKAGE_iptables-mod-extra=y
CONFIG_PACKAGE_ipset=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_kmod-tun=y
CONFIG_PACKAGE_kmod-nft-core=y
CONFIG_PACKAGE_kmod-nft-tproxy=y
CONFIG_PACKAGE_kmod-nft-nat=y
CONFIG_PACKAGE_kmod-nft-socket=y
CONFIG_PACKAGE_kmod-nft-queue=y
CONFIG_PACKAGE_nftables-json=y
CONFIG_PACKAGE_libnftnl=y
CONFIG_PACKAGE_luci-compat=y
CONFIG_PACKAGE_libustream-openssl=y
CONFIG_PACKAGE_coreutils-nohup=y

# DDNS
CONFIG_PACKAGE_ddns-scripts=y
CONFIG_PACKAGE_ddns-scripts_cloudflare.com-v4=y

# ZRAM
CONFIG_PACKAGE_zram-swap=y
CONFIG_PACKAGE_luci-app-zram-swap=y

# 文件系统挂载
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_parted=y
CONFIG_PACKAGE_f2fs-tools=y

# 去除 IPv6 节省空间
CONFIG_IPV6=n
CONFIG_PACKAGE_dnsmasq_full_dhcpv6=n
CONFIG_PACKAGE_kmod-ip6tables=n
CONFIG_PACKAGE_kmod-ipv6=n

