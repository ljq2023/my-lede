CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7620=y
CONFIG_TARGET_ramips_mt7620_DEVICE_xiaomi_mir3=y

# LuCI Web界面 + 中文
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-i18n-base-zh-cn=y
CONFIG_LUCI_LANG_zh-cn=y

# 设置默认 root 密码
CONFIG_DEFAULT_ROOT_PASSWORD="root"

# 网络与系统支持
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_ppp=y
CONFIG_PACKAGE_pppoe=y
CONFIG_IPV6=n
CONFIG_PACKAGE_kmod-ipv6=n
CONFIG_PACKAGE_kmod-ip6tables=n
CONFIG_PACKAGE_ipv6helper=n

# 基础工具
CONFIG_PACKAGE_wget-ssl=y
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-upnp=y

# DDNS 支持
CONFIG_PACKAGE_luci-app-ddns=y
CONFIG_PACKAGE_ddns-scripts_cloudflare.com-v4=y

# Passwall2 + NaiveProxy + Hysteria2 + KMS
CONFIG_PACKAGE_luci-app-passwall2=y
CONFIG_PACKAGE_naiveproxy=y
CONFIG_PACKAGE_hysteria2=y
CONFIG_PACKAGE_luci-app-kms=y

# USB 支持
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y

# 文件系统支持
CONFIG_PACKAGE_kmod-fs-ext4=y
CONFIG_PACKAGE_kmod-fs-vfat=y
CONFIG_PACKAGE_kmod-fs-ntfs3=y
CONFIG_PACKAGE_kmod-fs-exfat=y
CONFIG_PACKAGE_mount-utils=y

# squashfs 压缩支持
CONFIG_TARGET_IMAGES_GZIP=n
CONFIG_TARGET_ROOTFS_INITRAMFS=n
CONFIG_TARGET_ROOTFS_SQUASHFS=y

# 编译优化设置
CONFIG_DEVEL=n
CONFIG_BUILD_LOG=n
