CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt7621=y
CONFIG_TARGET_ramips_mt7621_DEVICE_xiaomi_mir3=y

CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_IMAGES_PAD=y
CONFIG_TARGET_IMAGES_CHECKSUM=y

CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dnsmasq-full=y
CONFIG_PACKAGE_openssh-server=y

# 核心内核驱动
CONFIG_PACKAGE_kmod-mt7621=y

# NAT 及连接跟踪
CONFIG_PACKAGE_kmod-ipt-core=y
CONFIG_PACKAGE_kmod-nf-nat=y
CONFIG_PACKAGE_kmod-nf-conntrack=y

# 无线驱动和无线工具包
CONFIG_PACKAGE_kmod-mt7603=y
CONFIG_PACKAGE_kmod-mt7615-common=y
CONFIG_PACKAGE_kmod-mt7615-firmware=y
CONFIG_PACKAGE_wpad-basic-wolfssl=y

# KMS server
CONFIG_PACKAGE_kmsserver=y

# Naiveproxy 插件及 LuCI 界面
CONFIG_PACKAGE_naiveproxy=y
CONFIG_PACKAGE_luci-app-naiveproxy=y

# Hysteria2 插件及 LuCI 界面
CONFIG_PACKAGE_hysteria2=y
CONFIG_PACKAGE_luci-app-hysteria2=y

# Passwall2 插件
CONFIG_PACKAGE_passwall2=y
CONFIG_PACKAGE_luci-app-passwall2=y

# LuCI 基础界面和https支持
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-ssl=y

# IPv6 helper
CONFIG_PACKAGE_ipv6helper=y

# 禁用 PPPoE 等非必要包
CONFIG_PACKAGE_ppp=n
CONFIG_PACKAGE_pppoe=n
