# Target Device
CONFIG_TARGET_ipq40xx=y
CONFIG_TARGET_ipq40xx_generic=y
CONFIG_TARGET_ipq40xx_generic_DEVICE_xiaomi_mir3=y

# Kernel modules
CONFIG_PACKAGE_kmod-ath10k-ct=y
CONFIG_PACKAGE_kmod-ath9k=y
CONFIG_PACKAGE_kmod-ath9k-common=y
CONFIG_PACKAGE_kmod-tun=y

# Network Base
CONFIG_PACKAGE_firewall=y
CONFIG_PACKAGE_odhcpd-ipv6only=n
CONFIG_PACKAGE_dnsmasq_full=y
CONFIG_PACKAGE_wpad-basic=y

# Base system
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_openssh-server=y

# Passwall2及其依赖
CONFIG_PACKAGE_luci-app-passwall=y
CONFIG_PACKAGE_passwall=y
CONFIG_PACKAGE_passwall-core=y
CONFIG_PACKAGE_passwall2=y

# Naive 插件（以 naiveproxy 名称示例）
CONFIG_PACKAGE_naiveproxy=y
CONFIG_PACKAGE_luci-app-naiveproxy=y

# KMS 服务器支持相关包
CONFIG_PACKAGE_kms-server=y

# Hysteria2 插件
CONFIG_PACKAGE_luci-app-hysteria=y
CONFIG_PACKAGE_hysteria=y

# Sing-box 插件
CONFIG_PACKAGE_luci-app-sing-box=y
CONFIG_PACKAGE_sing-box=y

# 禁用 IPv6
CONFIG_IPV6=n
CONFIG_PACKAGE_ipv6helper=n

# 常用工具和依赖
CONFIG_PACKAGE_curl=y
CONFIG_PACKAGE_wget=y
CONFIG_PACKAGE_unzip=y
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_vim=y
