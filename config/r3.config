#
# OpenWrt Configuration for Xiaomi Mi Router 4C (ramips/mt76x8)
#

CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt76x8=y
CONFIG_TARGET_ramips_mt76x8_DEVICE_xiaomi_mi-router-4c=y

# Kernel modules
CONFIG_KERNEL_MODULES=y
CONFIG_MODULE_STRIP=y

# Base system
CONFIG_BUSYBOX_DEFAULT_FEATURE_TELNETD=y
CONFIG_BUSYBOX_DEFAULT_FEATURE_SYSLOG=y
CONFIG_BUSYBOX_DEFAULT_FEATURE_WGET_LONG_OPTIONS=y

# Enable LuCI (Web管理界面)
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y

# Default settings
CONFIG_PACKAGE_default-settings=y

# Networking
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_openssl-util=y

# Wireless drivers
CONFIG_PACKAGE_kmod-mt76x8=y
CONFIG_PACKAGE_wpad-basic=y

# Filesystem and utils
CONFIG_PACKAGE_automount=y
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_ubox=y

# Additional utils (按需可增减)
CONFIG_PACKAGE_htop=y
CONFIG_PACKAGE_curl=y

# Disable debug to减小固件体积
CONFIG_DEBUG_SECTION_MISMATCH=y
CONFIG_STRIP_KERNEL=y

# Build options
CONFIG_DEVEL=y
CONFIG_DEBUG_KERNEL=n

# Languages & locales
CONFIG_PACKAGE_kmod-nls-base=y

# Other packages can根据需求添加

