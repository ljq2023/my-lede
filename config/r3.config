# 选择平台和子平台
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt76x8=y
CONFIG_TARGET_ramips_mt76x8_DEVICE_xiaomi_mir3=y

# 生成 sysupgrade 固件包
CONFIG_TARGET_IMAGES_GZIP=y
CONFIG_TARGET_IMAGES_PAD=64
CONFIG_TARGET_ROOTFS_SQUASHFS=y
CONFIG_TARGET_ROOTFS_JFFS2=y
CONFIG_TARGET_ROOTFS_INITRAMFS=y

# 无线驱动和工具
CONFIG_PACKAGE_kmod-mt76=y
CONFIG_PACKAGE_kmod-mt76x8=y
CONFIG_PACKAGE_wpad-basic=y
CONFIG_PACKAGE_wireless-tools=y
CONFIG_PACKAGE_iwinfo=y

# KMS 服务器
CONFIG_PACKAGE_kmod-crypto-hash=y
CONFIG_PACKAGE_kmod-crypto-aead=y
CONFIG_PACKAGE_kmod-crypto-manager=y
CONFIG_PACKAGE_kmod-crypto-user=y
CONFIG_PACKAGE_kms-server=y

# NaiveProxy 插件
CONFIG_PACKAGE_luci-app-naiveproxy=y
CONFIG_PACKAGE_naiveproxy=y

# Hysteria 插件
CONFIG_PACKAGE_luci-app-hysteria=y
CONFIG_PACKAGE_hysteria=y

# Passwall2 插件
CONFIG_PACKAGE_luci-app-passwall2=y
CONFIG_PACKAGE_passwall2=y

# 基础包
CONFIG_PACKAGE_base-files=y
CONFIG_PACKAGE_busybox=y
CONFIG_PACKAGE_dropbear=y
CONFIG_PACKAGE_opkg=y
CONFIG_PACKAGE_uci=y
CONFIG_PACKAGE_ubus=y
CONFIG_PACKAGE_uci-defaults=y
CONFIG_PACKAGE_logd=y
CONFIG_PACKAGE_rpcd=y
CONFIG_PACKAGE_netifd=y
CONFIG_PACKAGE_odhcp6c=y
CONFIG_PACKAGE_odhcpd-ipv6only=y
CONFIG_PACKAGE_dnsmasq=y
CONFIG_PACKAGE_firewall=y

# LuCI Web界面
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-base=y
CONFIG_PACKAGE_luci-mod-admin-full=y
CONFIG_PACKAGE_luci-theme-bootstrap=y

# 其他精简包，可以根据需求调整

# 关闭未必要包以减小体积
CONFIG_PACKAGE_ipv6helper=n

# 其他
CONFIG_PACKAGE_openssh-sftp-server=y

# 让无线正常启动
CONFIG_PACKAGE_wireless-regdb=y

# 系统默认shell和工具
CONFIG_PACKAGE_bash=y
CONFIG_PACKAGE_htop=y

# 交叉编译选项
CONFIG_THREADS=y
CONFIG_USE_MUSL=y
