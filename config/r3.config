# Target System
CONFIG_TARGET_ramips=y
CONFIG_TARGET_ramips_mt76x8=y

# Root Password
CONFIG_PASSWD_ROOT_PASSWORD="root"

# Wireless configuration
CONFIG_PACKAGE_luci-app-wireless=y
CONFIG_PACKAGE_kmod-mt76x8=y
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y

# Passwall Plugin (for Proxy & VPN)
CONFIG_PACKAGE_luci-app-passwall=y

# Hysteria2 Plugin (for faster proxy)
CONFIG_PACKAGE_hysteria2=y

# NaiveProxy Plugin
CONFIG_PACKAGE_naiveproxy=y

# KMS Server
CONFIG_PACKAGE_luci-app-kms=y

# USB Support
CONFIG_PACKAGE_kmod-usb-core=y
CONFIG_PACKAGE_kmod-usb2=y

# General settings
CONFIG_PACKAGE_luci=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y

# Filesystem
CONFIG_PACKAGE_block-mount=y
CONFIG_PACKAGE_f2fs-tools=y
CONFIG_PACKAGE_parted=y

# Enable ZRAM for system performance
CONFIG_PACKAGE_zram-swap=y
CONFIG_PACKAGE_luci-app-zram-swap=y

# Enable Luci Web Interface
CONFIG_PACKAGE_luci-theme-bootstrap=y
CONFIG_PACKAGE_luci-app-firewall=y
CONFIG_PACKAGE_luci-app-opkg=y
